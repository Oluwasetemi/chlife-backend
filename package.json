{
    "name": "choose-life-backend",
    "version": "0.2.9",
    "description": "Choose Life is a Solution focused wellness platform that helps clients track corporate wellness goals, statistics and returns on investment through the use of a platform that is tailored to the needs of employees health and fitness. The primary pillars of Choose Life are Health, Nutrition, Fitness and Lifestyle.",
    "main": "index.js",
    "repository": {
        "directory": "choose-life-backend",
        "type": "git",
        "url": "https://github.com/Ibdevs/choose-life-backend.git"
    },
    "scripts": {
        "dev:temi": "nodemon -e js,graphql -x node src/index.js",
        "start": "node src/index.js",
        "start:full": "npm-run-all -s blowitallaway seed start",
        "debug": "nodemon -e js,graphql -x node --inspect src/index.js",
        "playground": "graphql playground --dotenv variables.env",
        "lint": "eslint .",
        "format": "prettier --write \"**/*.+(js|md|markdown)\"",
        "lint:fix": "eslint .",
        "dev": "npm-run-all --parallel debug playground",
        "seed": "node src/seed/seed.js",
        "blowitallaway": "node src/seed/seed.js --delete",
        "email": "echo \"you must have pug-cli installed globally to convert all the pug template to html!NB Always change the templates/email-template-name\" && pug -w src/mail/templates/confirmed_email_subscriber.pug -o src/mail/html",
        "test:email": "node src/mail/templates/test-email.js",
        "test": "node is-ci.js"
    },
    "keywords": [
        "graphql",
        "lifestyle",
        "health",
        "fitness",
        "wellbeing"
    ],
    "author": "Oluwasetemi <setemiojo@gmail.com>",
    "license": "ISC",
    "dependencies": {
        "@contentful/rich-text-html-renderer": "^14.1.1",
        "@sendgrid/mail": "^7.4.0",
        "altair-express-middleware": "^2.5.1",
        "apollo-datasource-rest": "^0.9.4",
        "apollo-server-core": "^2.21.0",
        "apollo-server-express": "^2.15.0",
        "axios": "^0.19.2",
        "bcryptjs": "^2.4.3",
        "casual": "^1.6.2",
        "cors": "^2.8.5",
        "date-fns": "^2.15.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "googleapis": "^52.1.0",
        "graphql": "^15.0.0",
        "graphql-cli": "^4.1.0",
        "graphql-playground-middleware-express": "^1.7.15",
        "html-to-text": "^5.1.1",
        "is-ci": "^2.0.0",
        "jsonwebtoken": "^8.5.1",
        "juice": "^6.0.0",
        "mongoose": "^5.9.18",
        "mongoose-mongodb-errors": "0.0.2",
        "node-html-parser": "^1.2.20",
        "node-mailjet": "^3.3.1",
        "npm-run-all": "^4.1.5",
        "pug": "^3.0.0",
        "remark": "^12.0.1",
        "remark-html": "^12.0.0",
        "remark-preset-lint-recommended": "^4.0.1",
        "request": "^2.88.2",
        "sanitize-html": "^2.2.0",
        "validator": "^13.0.0",
        "vfile-reporter": "^6.0.1"
    },
    "devDependencies": {
        "babel-eslint": "^9.0.0",
        "eslint": "^5.14.1",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-config-prettier": "^4.1.0",
        "eslint-config-wesbos": "0.0.19",
        "eslint-plugin-html": "^5.0.3",
        "eslint-plugin-import": "^2.16.0",
        "eslint-plugin-jsx-a11y": "^6.2.1",
        "eslint-plugin-prettier": "^3.0.1",
        "eslint-plugin-react": "^7.12.4",
        "eslint-plugin-react-hooks": "^1.3.0",
        "nodemon": "^2.0.6",
        "prettier": "^1.16.4"
    }
}
